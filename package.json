{
  "name": "Rua",
  "version": "0.0.1",
  "description": "rua!rua!rua!",
  "scripts": {
    "dev": "webpack -w",
    "app": "electron app",
    "postinstall": "install-app-deps",
    "build": "cross-env NODE_ENV=production webpack",
    "pack": "npm run build && build --dir && babel --no-comments --compact --minified --out-file app/dist/bundle.js app/dist/bundle.js",
    "dist": "npm run build && build"
  },
  "main": "app/index.js",
  "repository": "https://github.com/miloas/Rua",
  "keywords": [
    "Electron",
    "Aria2"
  ],
  "babel": {
    "presets": [
      "react"
    ]
  },
  "build": {
    "appId": "miloas",
    "asar": false,
    "extend-info": "build/Info.plist",
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "author": "miloas",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-react": "^6.16.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.3",
    "electron": "1.4.7",
    "electron-builder": "^10.8.1",
    "electron-devtools-installer": "^2.0.1",
    "redux-logger": "^2.7.4",
    "webpack": "2.1.0-beta.25"
  },
  "dependencies": {
    "JSONRpc": "^0.3.10",
    "gaze": "^1.1.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "semantic-ui-react": "^0.63.0"
  }
}
